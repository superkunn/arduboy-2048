    //First set two numubers
    set2or4();
    set2or4();
    draw();
    arduboy.display();
    
    
    
}
void loop() {
  arduboy.clear();
  
  if( arduboy.pressed(UP_BUTTON) == true ){
    bool f=DoUp();
     
    if(f)set2or4(); 
  }
  else if( arduboy.pressed(DOWN_BUTTON) == true ){
    
    Down();
    bool f=DoUp();
    Down();

    if(f)set2or4();
    
  }
  else if( arduboy.pressed(RIGHT_BUTTON) == true ){
    Right(); 
    bool f=DoUp();
    Left();
    if(f)set2or4();
  }
  else if( arduboy.pressed(LEFT_BUTTON) == true ){
    Left(); 
    bool f=DoUp();
    Right();
    if(f)set2or4();
  }
   
    draw();
    arduboy.display();
}
